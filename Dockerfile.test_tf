FROM ubuntu:18.04

# Set up base environment
ENV DEBIAN_FRONTEND=noninteractive

# Install minimal dependencies first
RUN apt-get update && apt-get install -y \
    python3-dev \
    python3-pip \
    && rm -rf /var/lib/apt/lists/*

# Update pip and install tensorflow
RUN pip3 install --upgrade pip && \
    pip3 install tensorflow==1.8.0

# Test script
RUN echo "import tensorflow as tf; print('TensorFlow version:', tf.__version__); sess = tf.Session(); print('TensorFlow session created successfully')" > test.py

# Entry point
CMD ["python3", "test.py"]
